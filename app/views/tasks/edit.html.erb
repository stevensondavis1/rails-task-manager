<div class="container">
  <h1>Edit Task</h1>

  <%= form_with model: @task, url: task_path(@task), method: :patch, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :details %>
      <%= f.text_area :details, class: 'form-control' %>
    </div>

    <div class="mb-3 form-check">
      <%= f.check_box :completed, class: 'form-check-input' %>
      <%= f.label :completed, class: 'form-check-label' %>
    </div>

    <%= f.submit 'Update Task', class: 'btn btn-success' %>
  <% end %>
</div>
